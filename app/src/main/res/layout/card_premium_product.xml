<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardMaxElevation="4dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/extra_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/extrasGoldColorDark">

        <com.tolstykh.textviewrichdrawable.TextViewRichDrawable
            android:id="@+id/extra_title_with_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="Premium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:compoundDrawableHeight="20dp"
            app:compoundDrawableWidth="20dp"
            android:drawableStart="@drawable/ic_star_white"
            android:drawableLeft="@drawable/ic_star_white"
            android:drawableTint="@android:color/white" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="16dp"
            android:text="1.99 â‚¬"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/extra_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/extra_title_with_icon"
            android:layout_margin="4dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:text="."
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>